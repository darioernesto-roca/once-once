    </div>
</section>

<section id="feature-products" class="feature-products section-p1">
    <h2>Productos destacados</h2>

    <div class="product-container">
        <% featureProducts.forEach(product => { %>
            <div class="product" onclick="window.location.href='<%= urlFor(`/${product._id}`) %>'">
                <img src="<%= product.image %>" alt="<%= product.name %>">
                <div class="description">
                    <h4><%= product.name %></h4>
                    <% if (product.categories && product.subcategories) { %>
                        <h5><span><%= product.categories[0] %></span>/<span><%= product.subcategories[0] %></span></h5>
                    <% } %>
                </div>
                <div>
                    <!-- <img src="/img/assets/cart-icon.svg" alt="cart-icon" class="cart-icon"> -->
                    <svg class="cart-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512">
