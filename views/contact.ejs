<div id="success-modal" class="modal">
  <div class="modal-content">
    <p class="success-msg"><span id="success-message"></span></p>
    <div class="modal-buttons">
      <p class="success-link"><a class="normal modal-link" href="/inicio">Regresar a Inicio</a></p>
      <p class="success-link"><a class="normal modal-link" href="/Contacto">Regresar a Contacto</a></p>
    </div>
  </div>
</div>

<section>
  <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d4665.409739039582!2d-73.2762233284548!3d10.490706653360727!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e8ab9af49bfa5d1%3A0x8e4f796d61032b6f!2sSenderos%20del%20Country!5e0!3m2!1sen!2sco!4v1708869814296!5m2!1sen!2sco" width="100%" height="400px" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
</section>



<section class="page__container">
  <% if (typeof success_msg !=='undefined' && success_msg) { %>
    <script>
      document.addEventListener('DOMContentLoaded', function () {
        const modal = document.getElementById('success-modal');
        const successMessage = document.getElementById('success-message');

        successMessage.textContent = '<%= success_msg %>';
        modal.classList.add('show');


      });
    </script>
    <% } %>

      <div class="form-container">
        <h2 class="form-title">Contáctanos</h2>
        <p class="header-paragraph">Agenda una cita para visitarnos en nuestro almacén, en la CARRERA 22 No. 1-239 Mz A Casa 13. Conjunto Residencial Senderos del Country. También nos puedes contactar en el <a
            href="https://api.whatsapp.com/send?phone=573234273817&amp;text=Hola, estuve visitando su sitio Web y quisiera obtener más información sobre Once Once, sus productos y servicios."
            target="_blank"><strong>teléfono: </strong>3043761576</a></p>
        <form class="contact-form" action="/contacto" method="POST">
          <div class="form-group">
            <label class="form-label" for="name">Nombre</label>
            <input class="form-input" id="name" name="name" type="text" placeholder="Escribe tu nombre completo"
              required <% if (errors && errors.name) { %>
            class="form__input--error"
            <% } %>>
              <% if (errors && errors.name) { %>
                <p class="form__error">
                  <%= errors.name.msg %>
                </p>
                <% } %>
          </div>
          <div class="form-group">
            <label class="form-label" for="phone">Teléfono</label>
            <input class="form-input" id="phone" type="phone" name="phone" placeholder="Digita un número de teléfono" <%
              if (errors && errors.phone) { %>
            class="form__input--error"
            <% } %>>
              <% if (errors && errors.phone) { %>
                <p class="form__error">
                  <%= errors.phone.msg %>
                </p>
                <% } %>
          </div>
          <div class="form-group">
            <label class="form-label" for="email">Email</label>
            <input class="form-input" id="email" name="email" type="email" placeholder="Escribe tu Email" required <% if
              (errors && errors.email) { %>
            class="form__input--error"
            <% } %>>
              <% if (errors && errors.email) { %>
                <p class="form__error">
                  <%= errors.email.msg %>
                </p>
                <% } %>
          </div>
          <div class="form-group">
            <div class="help">Por favor selecciona el tipo de servicio.</div>
            <label for="service">Servicios</label>
            <select id="service" name="service" required>
              <option value="" disabled selected>Selecciona uno</option>
              <option value="Cotizar o comprar una prenda">Cotizar o comprar una prenda</option>
              <option value="Agendar una cita">Agendar una cita</option>
              <option value="Conocer más sobre nuestros productos">Conocer más sobre nuestros productos</option>
              <option value="Promociones">Noticias y Promociones</option>
              <option value="Hecho a la medida">Hecho a la medida</option>
              <option value="Asesorías de estilo">Asesorías de estilo</option>
            </select>
          </div>
          <div class="form-group">
            <label for="message">Mensaje</label>
            <textarea class="form-textarea" name="message" id="message" cols="40" rows="10"
              placeholder="Escribe aquí tu mensaje..."></textarea>
            <div class="help">El mensaje no puede tener más de 500 palabras.</div>
          </div>
          <div class="form-group">
            <label for="terms">
              <input id="terms" type="checkbox" name="terms" required>
              <span>Acepto <a class="link-pages" href="/terminos-y-condiciones">términos y condiciones</a></span>
            </label>
          </div>
          <div class="g-recaptcha" data-sitekey="6LeTJ5EoAAAAAOgPoXcW6YuZH2Hv2gsWwd2cJItv">
          </div>
          <br />
          <div class="button-container">
            <input type="submit" value="Enviar" class="normal">
          </div>

        </form>

</section>